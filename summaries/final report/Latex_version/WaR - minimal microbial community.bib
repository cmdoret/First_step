file = {::},
issn = {13652435},
journal = {Functional Ecology},
keywords = {community assembly,plant microbiome,plant productivity},
number = {7},
pages = {1043--1052},
title = {{Giving back to the community: microbial mechanisms of plant???soil interactions}},
volume = {30},
year = {2016}
